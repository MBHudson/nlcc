#!/bin/bash
# This is a menu template written in bash
# By: MBHudson 2025
#
clear
function Menu_1
{
option=0
until [ "$option" = "1" ]; do
clear
 echo "  1.) Option 1"
 echo "  2.) Option 2"
 echo "  3.) Option 3"
 echo -e "                                                                           \e[41m b.) Main Menu" "\e[49m"
 echo -n "myprogram@nlcc:~#:"
 read option
 echo ""
 case $option in
 1 ) echo "Option 1" ;;
 2 ) echo "Option 2" ;;
 3 ) echo "Option 3" ;;
 b ) main_menu ;;
 * ) tput setf 3;echo "echo -n "myprogram@nlcc:~#:"";tput setf 3;
 esac
 done
}

