function main_menu
{
option=0
until [ "$option" = "4" ]; do

clear

 echo -e "\e[91m       1.) Menu 1         2.) Menu 2         3.) Menu 3\e[0m"
echo ""                                   
echo ""                                                           
echo ""
 echo -e -n "\e[38;5;82mmyprogram@\e[38;5;198tnlcc:~#:\e[0m"
read option
echo ""
case $option in
    1 ) Menu_1 ;  ;;
    2 ) Menu_2 ;  ;;
    3 ) Menu_3t ;  ;;
    * ) tput setf 4;echo -n "myprogram@nlcs:~#:";tput setf 4;                    
esac
